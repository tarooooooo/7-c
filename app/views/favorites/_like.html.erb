<% if current_user.liked_by?(book.id) %>
   <%= link_to book_favorites_path(book), method: :delete , remote: true do %>
     <i class="fas fa-heart"><%= book.favorites.count %></i>
   <% end %>
<% else %>
   <%= link_to book_favorites_path(book), method: :post , remote: true do %>
     <i class="far fa-heart"><%= book.favorites.count %></i>
   <% end %>
<% end %>